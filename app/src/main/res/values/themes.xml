<resources>
    <!-- Tema app Compose: niente ActionBar, status bar trasparente -->
    <style name="Theme.AppBuilder" parent="Theme.Material3.DayNight">
        <!-- Disattiva ActionBar/titolo finestra -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <!-- Aspetto di sistema (opzionale) -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/black</item>
    </style>
</resources>